<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shop_background"
    tools:context="com.cs309.nerdsbattle.nerds_battle.battle.BattleMapSelectionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/battleMapSelectionMapImage"
            android:src="@drawable/questionmark"
            android:scaleType="fitXY"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Select"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:gravity="center"
            android:background="@drawable/btn_battlemapselection"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/battleMapSelectionBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="15"
            android:id="@+id/battleMapSelectionTimer"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textSize="45dp"/>
    </RelativeLayout>

</FrameLayout>
