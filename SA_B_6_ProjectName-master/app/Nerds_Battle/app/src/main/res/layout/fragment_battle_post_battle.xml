<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shop_background"
    tools:context="com.cs309.nerdsbattle.nerds_battle.battle.BattlePostBattleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Battle"
            android:textSize="64dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:id="@+id/battlePostBattleOutcome"
            android:layout_gravity="center"
            android:text="You Lost, keep studying..."
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:id="@+id/battlePostBattleQp"
            android:text="+50 QP"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <ProgressBar
                android:id="@+id/battlePostBattleXpProgress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:progress="1"
                android:visibility="gone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:textSize="30dp"
                android:gravity="center"
                android:id="@+id/battlePostBattleXp"
                android:text="+100 XP"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="50dp"
            android:id="@+id/battlePostBattleGPA"
            android:text="GPA: C+"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="50dp"
            android:text="Stats:"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:id="@+id/battlePostBattleStats"
            android:layout_marginBottom="20dp">

        </ListView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Return Home"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_battlemapselection"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/battlePostBattleHomeBtn" />

    </LinearLayout>

</FrameLayout>
