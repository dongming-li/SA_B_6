<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shop_background"
    tools:context="com.cs309.nerdsbattle.nerds_battle.battle.BattleWaitFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/battleWaitProgressBar"
            style="?android:progressBarStyleLarge"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/progress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/battleWaitProgressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Match Making Started... Please Wait"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </RelativeLayout>

</FrameLayout>
